<project default="package" name="DataTools">
	<path id="compile.classpath">
		<fileset dir="lib" includes="*.jar" />
	</path>

	<target name="init">
		<mkdir dir="build/classes"/>
		<mkdir dir="dist"/>
	</target>
							   
	<target name="clean" description="Delete build directories">
		<delete dir="bin"/>
		<delete dir="build"/>
		<delete dir="dist"/>
	</target>

	<target name="compile" depends="init" description="Compile source code">
		<javac srcdir="src" destdir="build/classes" classpathref="compile.classpath" includeantruntime="false" debug="on"/>
	</target>

	<target name="package" depends="clean,compile" description="Generate jar file">
		<jar destfile="dist/Hammer-java.jar" basedir="build/classes">
			<manifest>
				<attribute name="Built-By" value="dong.d.li@intel.com"/>
				<attribute name="Implementation-Version" value="2.2"/>
			</manifest>
		</jar>
	</target>
</project>