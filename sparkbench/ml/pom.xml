        <plugins>
          <plugin>
            <groupId>net.alchim31.maven</groupId>
            <artifactId>scala-maven-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>com/intel/sparkbench/ml/DenseKMeans.scala</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <activation>
        <property>
          <name>spark</name>
          <value>2.4</value>
        </property>
      </activation>
    </profile>

    <profile>
      <id>spark3.0</id>
      <properties>
        <spark.version>3.0.0</spark.version>
        <spark.bin.version>3.0</spark.bin.version>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>net.alchim31.maven</groupId>
            <artifactId>scala-maven-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>com/intel/sparkbench/ml/DenseKMeans.scala</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <activation>
        <property>
          <name>spark</name>
          <value>3.0</value>
        </property>
      </activation>
    </profile>
  </profiles>
</project>
