                <exclude>com/intel/sparkbench/ml/MLDenseKMeans.scala</exclude>
              </excludes>
            </configuration>
          </plugin>
        </plugins>
      </build>
      <activation>
        <property>
          <name>spark</name>
          <value>2.2</value>
        </property>
      </activation>
    </profile>

    <profile>
      <id>spark2.3</id>
      <properties>
        <spark.version>2.3.0</spark.version>
        <spark.bin.version>2.3</spark.bin.version>
      </properties>
      <build>
        <plugins>
          <plugin>
            <groupId>net.alchim31.maven</groupId>
            <artifactId>scala-maven-plugin</artifactId>
            <configuration>
              <excludes>
                <exclude>com/intel/sparkbench/ml/MLDenseKMeans.scala</exclude>
              </excludes>
            </configuration>
