          <name>spark</name>
          <value>2.1</value>
        </property>
      </activation>
    </profile>

    <profile>
      <id>spark2.2</id>
      <properties>
        <spark.version>2.2.0</spark.version>
        <spark.bin.version>2.2</spark.bin.version>
      </properties>
